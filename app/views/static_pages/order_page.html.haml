				.card
					.card-header{:role => "tab", :id => "heading2"}
						.mb-0
							%a{"data-toggle" => "collapse", "data-present" => "#accordion", :href => "#collapse2", "aria-expanded" => "false", "aria-controls" => "collapse2"}
								Dinner menu
					#collapse2{:class => "collapse hide", :role => "tabpanel", "aria-labelledby" => "heading2"}
