		.col-sm-3.order-box

			%input{:type => "button", :class => "btn btn-success btn-md", :value => "Place your order"}
			%p By placing your order, you agree to our terms of service
			%hr
			%p.subtitle Order summary
			.row
				.col-sm-7
					%h6 Total items:
				.col-sm-5
			.row
				.col-sm-7
					%h6 Delivery fee:
